# ============================================
# Django CRM Application - Environment Variables Example
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# Core Django Settings
# ============================================
# Secret key for Django (CHANGE THIS IN PRODUCTION!)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode: Set to 0, false, or no for production
# Development: 1, true, or yes
# Production: 0, false, or no
DEBUG=1

# Environment type: dev, staging, or production
ENV_TYPE=dev

# ============================================
# Host Configuration
# ============================================
# Allowed hosts (comma-separated). Leave empty for localhost fallback
# For production: your-domain.com,www.your-domain.com
# For Render: automatically handled via RENDER_EXTERNAL_HOSTNAME
ALLOWED_HOSTS=

# Domain name for the application
DOMAIN_NAME=localhost

# Site URL (used for email links and absolute URLs)
# Development: http://127.0.0.1:8000
# Production: https://your-domain.com
SITE_URL=http://127.0.0.1:8000

# Render.com automatically sets RENDER_EXTERNAL_HOSTNAME (no need to set manually)
# This is automatically provided by Render when deployed
# RENDER_EXTERNAL_HOSTNAME=

# ============================================
# Frontend Configuration
# ============================================
# Frontend URL (React app hosted on Vercel)
FRONTEND_URL=https://skycrm.vercel.app

# ============================================
# Database Configuration
# ============================================
# Option 1: Use DATABASE_URL (recommended for Supabase/Render)
# Format: postgresql://user:password@host:port/database
# For Supabase: Use connection pooler port 6543 instead of 5432
# Example: postgresql://user:password@host.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=

# Option 2: Use individual database variables (fallback if DATABASE_URL not set)
# Uncomment and fill these if not using DATABASE_URL
# DBNAME=crm
# DBUSER=crm
# DBPASSWORD=your-database-password
# DBHOST=127.0.0.1
# DBPORT=5432

# ============================================
# Email Configuration
# ============================================
# SMTP server host
EMAIL_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
EMAIL_PORT=587

# Use TLS encryption
EMAIL_USE_TLS=True

# SMTP username (usually your email address)
EMAIL_HOST_USER=your-email@gmail.com

# SMTP password (use app-specific password for Gmail)
EMAIL_HOST_PASSWORD=your-app-specific-password

# Default sender email address
DEFAULT_FROM_EMAIL=noreply@example.com

# Admin email address (for error notifications)
ADMIN_EMAIL=admin@example.com

# ============================================
# Celery Configuration (Redis)
# ============================================
# Celery broker URL for task queue
# Format: redis://host:port/db_number
# Local: redis://localhost:6379/0
# Production: redis://your-redis-host:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend URL
# Format: redis://host:port/db_number
# Local: redis://localhost:6379/1
# Production: redis://your-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================
# Cache Configuration
# ============================================
# Cache backend: 'redis' or 'locmem' (local memory)
# Use 'locmem' for local development without Redis
# Use 'redis' for production or when Redis is available
CACHE_BACKEND=locmem

# Cache URL (only used if CACHE_BACKEND=redis)
# Format: redis://host:port/db_number
# Local: redis://localhost:6379/2
# Production: redis://your-redis-host:6379/2
CACHE_URL=redis://localhost:6379/2


# ============================================
# Security & CORS
# ============================================
# CSRF trusted origins (comma-separated)
# Add your frontend domain(s) and any other trusted origins here
# The frontend URL is automatically added, but you can add additional origins
# Example: https://skycrm.vercel.app,https://your-domain.com
CSRF_TRUSTED_ORIGINS=

# Include Render.com wildcard (*.onrender.com) in CSRF trusted origins
# Set to 0, false, or no to disable (useful if not using Render)
# Default: 1 (enabled)
CSRF_INCLUDE_RENDER=1
