{
  "installCommand": "pip install --break-system-packages -r requirements.txt",
  "buildCommand": "cd CRM && python manage.py collectstatic --noinput || true",
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/CRM/staticfiles/$1" },
    { "source": "/(.*)", "destination": "/api/index" }
  ],
  "env": {
    "PYTHONPATH": "CRM"
  }
}
